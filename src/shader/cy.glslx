precision mediump float;
varying vec2 varyingTexCoord;
attribute vec2 uv;
uniform vec4 scaleOffset;

export void vertex()
{
    varyingTexCoord = uv;
    vec2 scaledAndOffsetTexCoord = uv * scaleOffset.xy + scaleOffset.zw;
    gl_Position = vec4(scaledAndOffsetTexCoord * 2. - vec2(1), 1, 1);
}

uniform sampler2D tex;

export void fragment()
{
    vec4 sampledColor = texture2D(tex, varyingTexCoord);
    gl_FragColor = sampledColor;
}